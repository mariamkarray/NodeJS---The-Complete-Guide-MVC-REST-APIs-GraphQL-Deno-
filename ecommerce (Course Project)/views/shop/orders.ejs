    <body>
        <%- include('../includes/navigation.ejs') %>
        <main><% if (orders.length > 0) { %>
                <ul>
                <% orders.forEach(order => { %>

                    <li>  
                        <h1># <%= order.id %></h1>
                        <ul>
                            <% order.products.forEach(product => { %>
                            <li>
                                <%= product.title %>
                            </li>
                            <% }); %>  
                        </ul>
                    </li>
                    
                <% }); %>  
                </ul>
                <% } else { %>
            <h1><%= orders.length %></h1>
            <% } %>

        </main>
        <%- include('../includes/end.ejs') %>